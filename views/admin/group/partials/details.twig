<div class="row" style="padding:20px;">
	<div class="col-sm-2 col-md-10">
		<div class="form-group row">
			<div class="col-md-2">Nama </div>
			<div class="col-md-1">: </div>
			<div class="col-md-8">{{ group.name }}</div>
		</div>
		<div class="form-group row">
			<div class="col-md-2">Deskripsi </div>
			<div class="col-md-1">: </div>
			<div class="col-md-9">{{ group.description }}</div>
		</div>
		<div class="form-group row">
			<div class="col-md-2">Anggota </div>
			<div class="col-md-1">: </div>
			<div class="col-md-8">{{ counts.user }}</div>
		</div>
	</div>
</div>
<div class="caption" style="padding:20px;">
	{% if login.status == 1 %}

	<a href="{{ base_url() }}/admin/group/{{ group.id }}/users"
	class="btn btn-primary btn btn-info btn-md" style="margin-bottom:7px">
	<b>{{ group.name }} Anggota</b></a>

	<a href="{{ base_url() }}/admin/group/{{ group.id }}/item"
	class="btn btn-primary btn btn-info btn-md" style="margin-bottom:7px">
	<b>Lihat Item</b></a>

	{% elseif login.status == 2 %}
	<a href="{{ base_url() }}/pic/{{ group.id }}/allusers"
		class="btn btn-primary btn btn-info btn-md" style="margin-bottom:7px">
		<b>Tambahkan Anggota</b></a>

	<a href="{{ base_url() }}/pic/{{ group.id }}/users"
	class="btn btn-primary btn btn-info btn-md" style="margin-bottom:7px">
	<b>{{ group.name }} Anggota</b></a>

	<span class="pull-right">
	<a href="{{ path_for('pic.item.group', {id: group.id}) }}" style="margin-bottom:7px">

	</a></span>

	{% endif %}
</div>
