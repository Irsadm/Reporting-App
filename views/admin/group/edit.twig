{% extends 'templates/default.twig' %}

{% block title %} Edit | Grup {% endblock %}

{% block headContent %}  Edit Grup {% endblock %}

{% block content %}

<div class="row">
	{% include 'admin/group/partials/image.twig' %}
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-body">
				<form action="{{ path_for('edit.group.post', {id: group.id}) }}" method="POST" enctype="multipart/form-data">
					{% if errors %}
					<div class="alert alert-danger">
						<a class="close" data-dismiss="alert" href="#">x</a>Pastikan semuanya terisi dengan benar!
					</div>
					{% endif %}
					<div class="row">
						<div class="col-xs-12 col-sm-4 col-md-7">
							<div class="form-group {{ errors.name ? 'has-error' : '' }}">
								<label for="name">Nama</label>
								<input type="text" name="name" id="title" class="form-control" value="{{ group.name }}">
								{% if errors.name %}
								<span class="help-block">{{errors.name | first}}</span>
								{% endif %}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 col-sm-4 col-md-7">
							<div class="form-group {{ errors.image ? 'has-error' : '' }}">
								<label for="image">Foto</label>
								<input type="file" name="image" id="image" class="form-control" value="{{ group.image }}">
								{% if errors.image %}
								<span class="help-block">{{errors.image | first}}</span>
								{% endif %}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 col-sm-6 col-md-12">
							<div class="form-group {{ errors.description ? 'has-error' : '' }}">
								<label for=description>Deskripsi</label>
								<textarea name="description" id="description" class="form-control">{{ group.description }}</textarea>
								{% if errors.description %}
								<span class="help-block">{{errors.description | first}}</span>
								{% endif %}
							</div>
						</div>
					</div>
					<button type="submit" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i>  Selesai</button>
					<hr style="margin-top:10px;margin-bottom:10px;" >
				</form>
			</div>
		</div>
	</div>
</div>

{% endblock %}
