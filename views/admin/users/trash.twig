{% extends 'templates/default.twig' %}
{% block title %} Trash User {% endblock %}

{% block css %}
    <style>
        .margin{
            margin: 0 10px;
        }
    </style>
{% endblock %}

{% block headContent %}
    <i class="fa fa-trash-o"> Trash User</i> {% endblock %}

{% block content %}

{% if flash.getMessage('restore') %}
<script language="javascript">
swal("Succes!", "Data Berhasil Dipulihkan !", "success")
</script>
{% endif %}

{% if flash.getMessage('delete') %}
<script language="javascript">
swal("Succes!", "Data Berhasil Dihapus !", "success")
</script>
{% endif %}

<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="example2" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-1 text-center">No.</th>
                            <th>Nama</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th class="text-center">Opsi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for data in usertrash %}
                        {% set i = i + 1 %}
                        <tr>
                            <td class="text-center">{{i}}</td>
                            <td>{{data.name}}</td>
                            <td>{{data.username}}</td>
                            <td>{{data.email}}</td>
                            <td>
                                {% if data.status == 3 %}
                                Belum diaktivasi
                                {% elseif data.deleted == 1 %}
                                Dinonaktifkan
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{path_for('user.delt' , {('id'): data.id})}}"
                                title=" Delete Data" style="color:red" data-toggle="tooltip"
                                data-placement="top"><i class="fa fa-times"></i></a>

                                {% if data.deleted == 1 %}
                                <a href="{{path_for('user.restore' , {('id'): data.id})}}"
                                data-toggle="tooltip" data-placement="top" title=" Restore Data" >
                                <i class="fa fa-refresh margin"></i></a>
                                {% endif %}

                                <a href="" data-toggle="modal" data-target="#{{data.id}}"
                                value="{{data.id}}"title=" View User" ><i class="fa fa-eye"></i></a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% for data in usertrash %}
<div id="{{data.id}}" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" style="color:red">&times;</button>
                <center><h3 class="modal-title" style="font-family:impact">Sekilas User</h4></center>
                </div>
            <div class="modal-body">
                <center><img style="width:250px" class="pull-left"
                    src="https://cdn1.iconfinder.com/data/icons/metro-ui-dock-icon-set--icons-by-dakirby/128/User_No-Frame_mirror.png" alt=""></center>
                <p><b>Nama :</b> {{data.name}}</p>
                <p><b>Username :</b> {{data.username}}</p>
                <p><b>Email :</b> {{data.email}}</p>
                <p><b>Jenis kelamin :</b> {{data.gender}}</p>
                <p><b>Alamat :</b> {{data.address}}</p>
                <p><b>Telepon :</b> {{data.phone}}</p>
                <p><b>Tanggal terdaftar :</b> {{data.created_at}}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{% endblock %}
