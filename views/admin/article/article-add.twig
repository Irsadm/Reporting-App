{% extends 'templates/default.twig' %}

{% block title %} Buat Artikel  {% endblock %}

{% block headContent %}
	<i class="fa fa-plus" aria-hidden="true">  Buat Artikel</i>
{% endblock %}

{% block content %}

 <div class="box box-primary">
	 <form method="post" autocomplete="off" action="{{ path_for('article-add') }}"
	 enctype="multipart/form-data">
	 <div class="box-body">
		 <div class="form-group {{ errors.title ? 'has-error': '' }}">
			 <input type="text" name="title" class="form-control" placeholder="Judul">
			 {% if errors.title %}
			 <span class="help-block">{{ errors.title|first }}</span>
			 {% endif %}
		 </div>
		 <div class="form-group {{ errors.content ? 'has-error': '' }}">
			 <textarea name="content" id="summernote" class="form-control" placeholder="Isi" rows="10">
			 </textarea>
			 {% if errors.content %}
			 <span class="help-block">{{ errors.content|first }}</span>
			 {% endif %}
		 </div>
		 <div class="form-group {{ errors.image ? 'has-error' : '' }}">
			 <div id="image_preview"><img id="previewing"
				 src="{{ base_url() }}/assets/images/file-empty.png"
				 class="img-thumbnail" style="width:200px" ></div><br />

				 <label for="image">Foto</label>
				 <input type="file" id="file" name="image" id="image" class="form-control">
				 {% if errors.image %}
				 <span class="help-block">{{errors.image | first}}</span>
				 {% endif %}
			 </div>
		 </div>
		 <div class="box-footer">
			<button type="submit" class="btn btn-primary center-block">
				 <i class="fa fa-reply"></i> Buat
			</button>
		 </div>
	 </form>
 </div>

{% endblock %}
