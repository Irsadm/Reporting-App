{% extends 'templates/default.twig' %}

{% block title %} Artikel | {{ article.title }}  {% endblock %}

{% block headContent %}
<i class="fa fa-eye" aria-hidden="true"> Artikel</i>
{% endblock %}

{% block content %}
<div class="container">
	<div class="col-md-8 col-md-offset-1">
		<div class="card">
			<center><img class="card-img-top" src="{{ base_url() }}/assets/images/{{ article.image }}"
				width="80%" height="300"></center>
				<div class="card-block">
					<h4 class="media-heading"> {{ article.title }} </h4>
					<p class="fa fa-calendar"> {{ article.created_at|date('d/m/Y') }} </p>
					<p class="fa fa-clock-o"> {{ article.created_at|date("H:m") }} </p>
					<p> {{ article.content |raw }} </p>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
