<div class="container">
    <div class="col-md-8 col-md-offset-1">
	<form method="GET" action="{{ path_for('home') }}">
	    <div class="input-group">
	        <input type="text" class="form-control" name="search" placeholder="Cari ...">
	        <span class="input-group-btn">
	            <button class="btn btn-default" type="submit">Cari</button>
	        </span>
	    </div>
 	</form>
	</br>
        	{% if data.data %}
            	{% for article in data.data %}
			        <div class="card">
			            <center><img style="margin-top:10px;margin-bottom:20px;"  class="card-img-top" src="{{ base_url() }}/assets/images/{{ article.image }}"
			             width="75%" height="300"  alt="Lights" alt="Card image cap"></center>
			            <div class="card-block">
			                <h4 class="media-heading">{{ article.title }}</h4>
			                <p class="fa fa-calendar"> {{ article.created_at|date('d/m/Y') }} </p>
			                <p class="fa fa-clock-o"> {{ article.created_at|date("H:i") }} </p>
			                <p class="text-justify">{{ article.content|slice(0, 300)|raw }}

			                    {% if login.status == 1 %}
			                    <a href="{{ path_for('article-read', { id:article.id }) }}">Selengkapnya...</a></p>
			                    {% elseif login.status == 0 %}
			                    <a href="{{ path_for('user.article-read', { id:article.id }) }}">Selengkapnya...</a></p>
			                    {% endif %}

			                    <br>
			                {% endfor %}
			            </div>
			        </div>
			        <hr>
            {% elseif data %}
                {% for article in data %}
                	<div class="card">
			            <center><img class="card-img-top" src="{{ base_url() }}/assets/images/{{ article.image }}"
			             width="75%" height="300"  alt="Lights" alt="Card image cap"></center>
			            <div class="card-block" style>
			                <h4 class="media-heading">{{ article.title }}</h4>
			                <p class="fa fa-calendar"> {{ article.created_at|date('d/m/Y') }} </p>
			                <p class="fa fa-clock-o"> {{ article.created_at|date("H:i") }} </p>
			                <p class="text-justify">{{ article.content|slice(0, 300)|raw }}

			                    {% if login.status == 1 %}
			                    <a href="{{ path_for('article-read', { id:article.id }) }}">Baca Selengkapnya...</a></p>
			                    {% elseif login.status == 0 %}
			                    <a href="{{ path_for('user.article-read', { id:article.id }) }}">Baca Selengkapnya...</a></p>
			                    {% endif %}

			                    <br>
			                {% endfor %}
			            </div>
			        </div>
			        <hr>

            {% else %}
                <div class="card">
                    <center><img class="card-img-top" src="{{ base_url() }}/assets/images/not-found.jpg"
                     width="75%" height="300"  alt="Lights" alt="Card image cap"></center>
                </div>

        	{% endif %}

        <nav aria-label="...">
			<ul class="pager">
				{% if data.current > data.first_page %}
			    	<li class="previous"><a href="{{ base_url() }}/home?page={{ data.first_page }}"><span aria-hidden="true">&larr;</span> Halaman pertama</a></li>
			    	<li class="previous"><a href="{{ base_url() }}/home?page={{ data.current - 1 }}"><span aria-hidden="true">&larr;</span> Kembali</a></li>
			    {% endif %}
            	{% if data.current < data.total_page %}
			    	<li class="next"><a href="{{ base_url() }}/home?page={{ data.total_page }}">Halaman terakhir <span aria-hidden="true">&rarr;</span></a></li>
			    	<li class="next"><a href="{{ base_url() }}/home?page={{ data.current + 1 }}">Selanjutnya <span aria-hidden="true">&rarr;</span></a></li>
			    {% endif %}
<!-- 			    {% if data.current <= 1 %}
			    	<li class="disabled pull-left"><a href="#"><span aria-hidden="false">&larr;</span> Back</a></li>
			    {% endif %} -->
			  </ul>
		</nav>
    </div>
