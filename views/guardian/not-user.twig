{% extends 'templates/default.twig' %}

{% block title %} Grup | Semua Pengguna {% endblock %}

{% block headContent %}
	 <i style="color:green" class="fa fa-check-square-o">  Semua Pengguna </i>
{% endblock %}

{% block content %}

<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-default">
			<div class="panel-body">
				<form action="{{ path_for('post.user.add') }}" method="POST">
					<table id="example2" class="table table-bordered table-striped table-hover">
						<thead>
							<tr>
								<th>Nama</th>
								<th>Jenis Kelamin</th>
								<th>Alamat</th>
								<th>Email</th>
								<th>Telepon</th>
								<th>Photo</th>
								<th style="width: 40px">Pilih</th>
							</tr>
						</thead>
						{% for user in users %}
						<tr>
							<td>{{ user.name }}</td>
							<td>{{ user.gender }}</td>
							<td>{{ user.address }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.phone }}</td>
							<td><img src="{{ base_url() }}/assets/images/
							{{ user.image }}" width="100" height="100"></td>
							<td class="text-center"><input type="checkbox"
								name="user[]" value="{{ user.id }}"></td>
						</tr>
						{% endfor %}
					</table>
					<hr style="margin-top:10px;margin-bottom:10px;" >
				</div>
				<div class="panel-body" align="right">
					<input type="hidden" name="guard_id" value="{{ guard_id }}">
					<button type="submit" name="setuser" value="1" class="btn btn-primary">
						<i class="fa fa-user-plus fa-lg" aria-hidden="true"></i>Tambahkan</button>
					<hr style="margin-top:10px;margin-bottom:10px;" >
				</form>
			</div>
		</div>
	</div>
</div>

{% endblock %}
