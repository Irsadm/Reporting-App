{% extends 'templates/default.twig' %}
{% block title %}Setting Account{% endblock %}
{% block content %}

<div class="panel-body">
    <div class="box box-info">
      <a href="{{path_for('user.change.password')}}"><button type="submit"
                class="btn btn-social-button btn-github pull-right" style="margin:10px">
                <i class="fa fa-user-secret"></i> Ubah Password</button></a>
        <a href="#"><h4 class="text-center"><i class="fa fa-cogs"></i>Pengaturan akun</h4></a>

        <form action="{{ path_for('user.setting', {id:login.id} ) }}"
        method="POST" enctype="multipart/form-data">
            <div class="col-lg-6">
                <div class="box-body">
                    <div class="form-group {{ errors.username ? 'has-error' : '' }}" >
                        <label>Username:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-users"></i>
                            </div>
                            <input type="text" name="username" class="form-control"
                            value="{{ login.username }}" placeholder="Username">
                        </div>
                        {% if errors.username %}
                        <span class="help-block">
                            {{errors.username | first}}</span>
                            {% endif %}
                    </div>

                    <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                        <label>Nama:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            <input type="text" name="name" class="form-control"
                             value="{{ login.name }}" placeholder="Nama">
                        </div>
                        {% if errors.name %}
                        <span class="help-block">{{errors.name | first}}</span>
                        {% endif %}
                    </div>

                    <div class="form-group {{ errors.gender ? 'has-error' : '' }}">
                        <label>Jenis kelamin :</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-transgender-alt"></i>
                            </div>
                            <select name="gender" class="form-control" id="">
                                <option value="Laki-laki" {% if  login.gender == "Laki-laki" %}
                                 selected="selected"{% endif %}>Laki-Laki</option>
                                <option value="Perempuan" {% if  login.gender == "Perempuan" %}
                                 selected="selected"{% endif %}>Perempuan</option>
                            </select>
                        </div>
                        {% if errors.gender %}
                        <span class="help-block">
                            {{errors.gender | first}}</span>
                            {% endif %}
                    </div>

                    <div class="form-group {{ errors.address ? 'has-error' : '' }}">
                        <label>Alamat:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <input type="text" name="address" class="form-control"
                             value="{{ login.address }}" placeholder="Alamat">
                        </div>
                        {% if errors.address %}
                        <span class="help-block">{{errors.address | first}}</span>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                        <label>Email:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <input type="email" name="email" class="form-control"
                            value="{{ login.email }}" placeholder="Email">
                        </div>
                        {% if errors.email %}
                        <span class="help-block">{{errors.email | first}}</span>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.phone ? 'has-error' : '' }}">
                        <label>Nomor telepon:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <input type="text" class="form-control input-medium bfh-phone"
                             data-format="+62dddddddddddd" name="phone"
                             value="{{ login.phone }}" placeholder="Telepon">
                        </div>
                        {% if errors.phone %}
                        <span class="help-block">{{errors.phone | first}}</span>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="box-body">
                <div class="col-lg-6">
                    <div class="form-group {{ errors.image ? 'has-error' : '' }}">
                        <div id="image_preview"><img id="previewing"
                            src="{{ base_url() }}/assets/images/{{ login.image }}"
                            class="img-thumbnail" style="width:200px" ></div><br />
                        <label>Foto :</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-image"></i>
                            </div>
                            <input type="file" id="file" class="form-control"
                            name="image" value="{{login.image}}" placeholder="Foto">
                            <input type="hidden" name="id" value="{{ login.id }}">
                        </div>
                        {% if errors.image %}
                        <span class="help-block">{{errors.image | first}}</span>
                        {% endif %}
                    </div>
                </div>
                <button type="submit" class="btn btn-default" style="margin:10px">
                    <i class="fa fa-cog"></i> Simpan perubahan</button>
                </form>
            </div>
            </div>
        </div>

{% endblock %}
