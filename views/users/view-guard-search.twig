{% extends 'templates/default.twig' %}

{% block title %} Wali | Pencarian {% endblock %}

{% block headContent %}
	 <i style="color:green" class="fa fa-user-circle-o"> Hasil Pencarian ({{ count }} ditemukan) </i>

{% endblock %}

{% block content %}

<div class="row">
	{% for user in users %}
		<div class="col-sm-2 col-md-3">
			<div class="panel box-body">
			<center><img src="{{ base_url() }}/assets/images/{{ user.image }}"
				 height="151" width="151" style="margin-bottom:5px"></center>
			  	<div class="caption">
                    <div class="col-lg-12">
                        <p class="text-center">
                            {{user.name}}<br>
							<i class="fa fa-phone" aria-hidden="true"></i> {{user.phone}}<br>
                        </p>
                        <br>
                        <center>
	                        <button class="btn btn-primary btn-info btn-md"
		                    	style="margin-left:10px">
		                    	<a href="{{ path_for('set.guardian', {('id'): user.id}) }}">Tambahkan</a>
		                    </button>
                        </center>
                    </div>
			  	</div>
			</div>
	  	</div>
	{% endfor %}
</div>
	{% if users == null %}
	<hr style="margin-top:10px;margin-bottom:10px;" >
	<p align="center" style="color:red">Data tidak ditemukan</p>
	<hr style="margin-top:10px;margin-bottom:10px;" >
	{% endif %}
	<hr style="margin-top:10px;margin-bottom:10px;" >
</form>
{% endblock %}
