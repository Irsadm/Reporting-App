<section class="sidebar">
    <div class="user-panel">
        <div class="pull-left image">
            <img src="{{ base_url() }}/assets/images/{{ login.image }}"
            class="img-circle" alt="User Image" style="height:50px">
        </div>

        <div class="pull-left info">
            <p>{{login.name}}</p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online
            </a>
        </div>
    </div>

    <ul class="sidebar-menu">
        <li class="header">MENU</li>
        <li class="treeview">
            <a href="{{path_for('home')}}"><i class="fa ion-ios-speedometer fa-lg">
            </i> <span>BERANDA</span></a>
        </li>

        {% if login.status == 1 %}
        <li class="treeview">
            <a href="#"><i class="fa fa-users"></i>
                <span>GRUP</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{path_for('create.group.get')}}">Buat Grup</a></li>
                <li><a href="{{path_for('group.list')}}">Daftar Grup</a></li>
                <li><a href="{{path_for('group.inactive')}}">Grup tidak aktif</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-user-circle-o"></i>
                <span>USER</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{path_for('user.create')}}">Buat User</a></li>
                <li><a href="{{path_for('user.list.all')}}">Daftar user</a></li>
                <li><a href="{{path_for('user.trash')}}">User tidak aktif</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-list-alt"></i>
                <span>ARTIKEL</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{ path_for('article-add') }}">Buat Artikel</a></li>
                <li><a href="{{ path_for('article-list-active') }}">Daftar Artikel</a></li>
                <li><a href="{{ path_for('article-list-inactive') }}">Artikel tidak aktif</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-sitemap"></i>
                <span>ITEM</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{ path_for('item.list')}}">Daftar Item </a></li>
                <li><a href="{{ path_for('item.trash')}}">Item tidak aktif</a></li>
            </ul>
        </li>

        {% elseif login.status == 2 %}

        <li class="treeview">
            <a href="{{ path_for('list.user')}}"><i class="fa fa-users"></i>
                <span>ANAK</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
        </li>
        <li class="treeview">
            <a href="{{ path_for('list.guard')}}"><i class="fa fa-users"></i>
                <span>WALI</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
        </li>

        <li class="treeview">
            <a href="{{ path_for('user.group') }}"><i class="fa fa-users"></i>
                <span>GRUP</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
        </li>
        {% endif %}
    </ul>
</section>
