<section class="sidebar">
    <div class="user-panel">
        <div class="pull-left image">
            <img src="{{ base_url() }}/assets/images/{{ login.image }}"
            class="img-circle" alt="User Image" style="height:50px">
        </div>

        <div class="pull-left info">
            <p>{{login.name}}</p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online
            </a>
        </div>
    </div>

    <ul class="sidebar-menu">
        <li class="header">NAVIGATION MENU</li>
        <li class="treeview">
            <a href="{{path_for('home')}}"><i class="fa ion-ios-speedometer fa-lg">
            </i> <span>HOME</span></a>
        </li>

        {% if login.status == 1 %}
        <li class="treeview">
            <a href="#"><i class="fa fa-users"></i>
                <span>GROUP</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{path_for('create.group.get')}}">Create Group</a></li>
                <li><a href="{{path_for('group.list')}}">Group List</a></li>
                <li><a href="{{path_for('group.inactive')}}">Group Inactive</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-user-circle-o"></i>
                <span>USER</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{path_for('user.create')}}">Create User</a></li>
                <li><a href="{{path_for('user.list.all')}}">User List</a></li>
                <li><a href="{{path_for('user.trash')}}">User Inactive</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-list-alt"></i>
                <span>ARTICLE</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{ path_for('article-add') }}">Create Article</a></li>
                <li><a href="{{ path_for('article-list-active') }}">Article List</a></li>
                <li><a href="{{ path_for('article-list-inactive') }}">Article Inactive</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-sitemap"></i>
                <span>ITEM</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{ path_for('item.add')}}">Create Item</a></li>
                <li><a href="{{ path_for('item.list')}}">Item List</a></li>
                <li><a href="{{ path_for('item.trash')}}">Trash</a></li>
            </ul>
        </li>

        {% elseif login.status == 2 %}

        <li class="treeview">
            <a href="{{ path_for('list.user')}}"><i class="fa fa-users"></i>
                <span>MY USER</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
        </li>

        <li class="treeview">
            <a href="{{ path_for('pic.group') }}"><i class="fa fa-users"></i>
                <span>MY GROUP</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
        </li>

        <li class="treeview">
            <a href="{{ path_for('user.group') }}"><i class="fa fa-users"></i>
                <span>GENERAL GROUP</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
        </li>
        {% endif %}
    </ul>
</section>
