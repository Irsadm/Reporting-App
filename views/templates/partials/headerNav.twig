                            <span class="hidden-xs">{{login.name}}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src="{{ base_url() }}/assets/images/{{ login.image }}" class="img-circle" alt="User Image">

                                <p>
                                    {{login.name}}
                                    <small>Terdaftar sejak {{ login.created_at | date("m-d-Y") }}</small>
                                </p>
                            </li>
                            <!-- Menu Body -->
                            <li class="user-body">
                                <div class="row">
                                    <div class="col-xs-4 text-center">
